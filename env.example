# ================================
# PORTFOLIO - ENVIRONMENT VARIABLES
# ================================
# Rename this file to .env and fill in your values

# --------------------------------
# Server Configuration
# --------------------------------
NODE_ENV=development
PORT=5000

# --------------------------------
# Database
# --------------------------------
MONGO_URI=mongodb://localhost:27017/portfolio

# --------------------------------
# Client Configuration
# --------------------------------
CLIENT_URL=http://localhost:5173

# --------------------------------
# Email Configuration (for contact form)
# --------------------------------
# For development, leave these empty to use mock emails
# For production, configure your SMTP provider

EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM="Portfolio <noreply@example.com>"
ADMIN_EMAIL=admin@example.com

